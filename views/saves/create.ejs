<% include ../partials/header.ejs %>


<h2 class="text-center">Set Your Time</h2>



<div class="row">
  <div class="text-center">
    <!-- search for podcast and set time -->

    <form class="form create-save" action="/saves" method="post">
      <div class="form-group">
        <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
        <input type="text" name="userTime" class="form-control timer" value="30">
        <input type="hidden" name="userId" value="<%=user.id%>">
        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span><br>
        <h2>Give it a Name</h2>
        <input type="text" name="term" class="form-control search-term" placeholder="i.e., my work commute"><br>
        <button class="btn btn-primary go" type="submit">Save this for later</button>
      </div>
    </form>
    <h3 class="hidden success">Save is a success!</h3>
  </div>
</div>








